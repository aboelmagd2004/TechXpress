@using TechXpress.Data.Models
@model ProductViewModel

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">@Model.Name</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body row">
            <div class="col-md-5">
                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
            </div>
            <div class="col-md-7">
                <p><strong>SKU:</strong> @Model.SKU</p>
                <p><strong>Category:</strong> @Model.Category?.Name</p>
                <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p><strong>Stock:</strong> @Model.StockQuantity</p>
                <p>@Model.Description</p>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
