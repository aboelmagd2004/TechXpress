@using TechXpress.Data.Models
@{
    ViewData["Title"] = "Order Statistics";
    var orderCounts = ViewBag.OrderCounts as Dictionary<OrderStatus, int>;
    var totalSales = ViewBag.TotalSales as decimal?;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header text-center bg-primary text-white">
            <h3>Order Statistics</h3>
        </div>
        <div class="card-body">
            <h4>Total Sales</h4>
            <div class="mb-4">
                <p class="text-success fs-3 fw-bold">@totalSales?.ToString("C")</p>
            </div>

            <h4>Order Distribution</h4>
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Status</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var status in orderCounts)
                    {
                        <tr>
                            <td>@status.Key</td>
                            <td>@status.Value</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-4">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary btn-lg">Back to Admin Panel</a>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap JS (for potential future functionality like modal dialogs) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
