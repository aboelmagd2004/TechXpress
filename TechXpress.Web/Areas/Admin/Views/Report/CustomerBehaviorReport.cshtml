@{
    ViewData["Title"] = "Customer Behavior Report";
    Layout = "_AdminLayout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Customer Behavior Analysis</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Date Range:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="far fa-calendar-alt"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control float-right" id="customer-report-range">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Customer Segment:</label>
                    <select class="form-control select2" style="width: 100%;">
                        <option selected="selected">All Customers</option>
                        <option>High Value</option>
                        <option>Frequent Buyers</option>
                        <option>Inactive</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="report-content">
            @Html.Raw(ViewBag.Report)
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Purchase Frequency</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="purchaseFrequencyChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Average Order Value</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="orderValueChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <button class="btn btn-default" onclick="window.print()">
            <i class="fas fa-print"></i> Print
        </button>
        <div class="float-right">
            <button class="btn btn-success">
                <i class="fas fa-file-excel"></i> Export to Excel
            </button>
            <button class="btn btn-danger ml-2">
                <i class="fas fa-file-pdf"></i> Export to PDF
            </button>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
    <style>
        .report-content {
            white-space: pre-wrap;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
        }

            .report-content h3 {
                color: #3c8dbc;
                margin-top: 20px;
            }

            .report-content ul {
                padding-left: 20px;
            }

            .report-content li {
                margin-bottom: 8px;
            }
    </style>
}

@section Scripts {
    <script src="~/plugins/moment/moment.min.js"></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/plugins/chart.js/Chart.min.js"></script>
    <script>
        $(function () {
            // Date range picker
            $('#customer-report-range').daterangepicker({
                opens: 'left',
                locale: {
                    format: 'YYYY-MM-DD'
                }
            });

            // Initialize Select2 Elements
            $('.select2').select2();

            // Purchase Frequency Chart
            var purchaseCtx = document.getElementById('purchaseFrequencyChart').getContext('2d');
            var purchaseChart = new Chart(purchaseCtx, {
                type: 'bar',
                data: {
                    labels: ['1-2 times', '3-5 times', '6-10 times', '10+ times'],
                    datasets: [{
                        label: 'Number of Customers',
                        data: [12, 19, 8, 5],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.5)',
                            'rgba(75, 192, 192, 0.5)',
                            'rgba(255, 206, 86, 0.5)',
                            'rgba(255, 99, 132, 0.5)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(255, 99, 132, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Order Value Chart
            var orderValueCtx = document.getElementById('orderValueChart').getContext('2d');
            var orderValueChart = new Chart(orderValueCtx, {
                type: 'pie',
                data: {
                    labels: ['$0-$50', '$50-$100', '$100-$200', '$200+'],
                    datasets: [{
                        data: [15, 22, 18, 5],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.5)',
                            'rgba(75, 192, 192, 0.5)',
                            'rgba(255, 206, 86, 0.5)',
                            'rgba(153, 102, 255, 0.5)'
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        });
    </script>
}