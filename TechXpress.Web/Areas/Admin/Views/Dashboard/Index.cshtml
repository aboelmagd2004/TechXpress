@model TechXpress.Web.Areas.Admin.Models.DashboardViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="dashboard-container">
    <!-- Header Section -->
    <div class="dashboard-header">
        <div class="header-content">
            <h1 class="dashboard-title">
                <i class="fas fa-tachometer-alt"></i> Dashboard Overview
            </h1>
            <p class="dashboard-subtitle">Welcome back, Administrator!</p>
        </div>
        <div class="header-actions">
            <div class="date-selector">
                <div class="input-group">
                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                    <select class="form-select" id="periodSelect">
                        <option value="weekly">This Week</option>
                        <option value="monthly" selected>This Month</option>
                        <option value="yearly">This Year</option>
                    </select>
                </div>
            </div>
            <button class="btn-refresh">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Stats Cards Section -->
    <div class="dashboard-stats">
        <div class="stat-card card-users">
            <div class="card-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="card-content">
                <h3>@Model.TotalUsers</h3>
                <p>Total Users</p>
                <div class="card-trend positive">
                    <i class="fas fa-arrow-up"></i> @Model.NewUsersThisMonth new this month
                </div>
            </div>
            <div class="card-action">
                <a href="#" class="btn-action">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>

        <div class="stat-card card-products">
            <div class="card-icon">
                <i class="fas fa-box-open"></i>
            </div>
            <div class="card-content">
                <h3>@Model.TotalProducts</h3>
                <p>Total Products</p>
                <div class="card-trend neutral">
                    <i class="fas fa-equals"></i> Manage products
                </div>
            </div>
            <div class="card-action">
                <a href="#" class="btn-action">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>

        <div class="stat-card card-orders">
            <div class="card-icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="card-content">
                <h3>@Model.TotalOrders</h3>
                <p>Total Orders</p>
                <div class="card-trend neutral">
                    <i class="fas fa-equals"></i> View all orders
                </div>
            </div>
            <div class="card-action">
                <a href="#" class="btn-action">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>

        <div class="stat-card card-revenue">
            <div class="card-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="card-content">
                <h3>@Model.Revenue.ToString("C")</h3>
                <p>Total Revenue</p>
                <div class="card-trend @(Model.RevenueChange >= 0 ? "positive" : "negative")">
                    <i class="fas @(Model.RevenueChange >= 0 ? "fa-arrow-up" : "fa-arrow-down")"></i>
                    @Math.Abs(Model.RevenueChange).ToString("0.0")%
                </div>
            </div>
            <div class="card-action">
                <a href="#" class="btn-action">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="dashboard-charts">
        <div class="chart-card">
            <div class="chart-header">
                <div class="chart-title">
                    <h3><i class="fas fa-chart-line"></i> Sales Overview</h3>
                    <p>Monthly performance metrics</p>
                </div>
                <div class="chart-actions">
                    <div class="btn-group">
                        <button class="btn-chart-action active" data-period="weekly">Week</button>
                        <button class="btn-chart-action" data-period="monthly">Month</button>
                        <button class="btn-chart-action" data-period="yearly">Year</button>
                    </div>
                </div>
            </div>
            <div class="chart-container">
                <canvas id="salesChart"></canvas>
            </div>
        </div>

        <div class="chart-card">
            <div class="chart-header">
                <div class="chart-title">
                    <h3><i class="fas fa-user-clock"></i> User Activity</h3>
                    <p>Daily active users</p>
                </div>
                <div class="chart-actions">
                    <div class="dropdown">
                        <button class="btn-dropdown" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Export Data</a></li>
                            <li><a class="dropdown-item" href="#">View Details</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="chart-container">
                <canvas id="activityChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Orders Section -->
    <div class="dashboard-tables">
        <div class="table-card">
            <div class="table-header">
                <div class="table-title">
                    <h3><i class="fas fa-receipt"></i> Recent Orders</h3>
                    <p>Latest transactions</p>
                </div>
                <a asp-controller="Orders" asp-action="Index" class="btn-view-all">
                    View All <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td><span class="order-id">#@order.OrderId</span></td>
                                <td>@order.CustomerName</td>
                                <td><span class="order-amount">@order.Amount.ToString("C")</span></td>
                                <td>
                                    <span class="status-badge @order.Status.ToLower()">
                                        @order.Status
                                    </span>
                                </td>
                                <td><span class="order-date">@order.Date</span></td>
                                <td>
                                    <a asp-area="Admin" asp-controller="OrderManagement" asp-action="Details" asp-route-id="@order.OrderId" class="btn-action" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Include jQuery before other scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('.table').DataTable({
                responsive: true,
                paging: false,
                searching: false,
                info: false
            });

            // Chart initialization
            const salesCtx = document.getElementById('salesChart').getContext('2d');
            const activityCtx = document.getElementById('activityChart').getContext('2d');

            // Sample data (replace with dynamic values via AJAX or Razor if needed)
            let salesData = {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                datasets: [{
                    label: 'Sales ($)',
                    data: [1000, 1500, 1300, 1800],
                    backgroundColor: 'rgba(101, 116, 205, 0.2)',
                    borderColor: 'rgba(101, 116, 205, 1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            };

            let activityData = {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Active Users',
                    data: [120, 150, 130, 170, 200, 180, 160],
                    backgroundColor: 'rgba(246, 194, 62, 0.2)',
                    borderColor: 'rgba(246, 194, 62, 1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            };

            const salesChart = new Chart(salesCtx, {
                type: 'line',
                data: salesData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: '#2a3042',
                            titleFont: { size: 14, weight: 'bold' },
                            bodyFont: { size: 12 },
                            padding: 12,
                            cornerRadius: 8,
                            displayColors: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });

            const activityChart = new Chart(activityCtx, {
                type: 'line',
                data: activityData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: '#2a3042',
                            titleFont: { size: 14, weight: 'bold' },
                            bodyFont: { size: 12 },
                            padding: 12,
                            cornerRadius: 8,
                            displayColors: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });

            // Chart period button logic
            $('.btn-chart-action').click(function () {
                $('.btn-chart-action').removeClass('active');
                $(this).addClass('active');
                const period = $(this).data('period');

                // Example change of data based on period
                if (period === 'monthly') {
                    salesChart.data.labels = ['Week 1', 'Week 2', 'Week 3', 'Week 4'];
                    salesChart.data.datasets[0].data = [1000, 1500, 1300, 1800];
                } else if (period === 'weekly') {
                    salesChart.data.labels = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
                    salesChart.data.datasets[0].data = [200, 180, 220, 250, 270, 300, 310];
                } else if (period === 'yearly') {
                    salesChart.data.labels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'];
                    salesChart.data.datasets[0].data = [8000, 9500, 7200, 8800, 9900, 10200];
                }

                salesChart.update();
            });

            // Refresh button functionality
            $('.btn-refresh').click(function() {
                $(this).addClass('spin');
                setTimeout(() => {
                    $(this).removeClass('spin');
                }, 1000);
                // Here you would typically reload data via AJAX
            });
        });
    </script>
}

@section Styles {
    <style>
        :root {
            --primary: #6574cd;
            --primary-light: rgba(101, 116, 205, 0.1);
            --secondary: #f6c23e;
            --success: #1cc88a;
            --info: #36b9cc;
            --warning: #f6c23e;
            --danger: #e74a3b;
            --light: #f8f9fc;
            --dark: #5a5c69;
            --gray: #858796;
            --border-color: #e3e6f0;
            --card-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        body {
            background-color: #f8f9fc;
            font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            color: #5a5c69;
        }

        .dashboard-container {
            padding: 2rem;
            max-width: 1600px;
            margin: 0 auto;
        }

        /* Header Styles */
        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

        .header-content {
            flex: 1;
        }

        .dashboard-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--dark);
            margin: 0;
        }

            .dashboard-title i {
                margin-right: 0.75rem;
                color: var(--primary);
            }

        .dashboard-subtitle {
            color: var(--gray);
            margin: 0.5rem 0 0;
            font-size: 0.9rem;
        }

        .header-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .date-selector .input-group {
            width: 200px;
        }

        .input-group-text {
            background-color: var(--light);
            border-color: var(--border-color);
        }

        .form-select {
            border-color: var(--border-color);
            height: 40px;
            border-radius: 0 0.35rem 0.35rem 0 !important;
        }

        .btn-refresh {
            background-color: var(--light);
            border: 1px solid var(--border-color);
            color: var(--dark);
            padding: 0.5rem 1rem;
            border-radius: 0.35rem;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .btn-refresh:hover {
                background-color: var(--primary-light);
                color: var(--primary);
            }

            .btn-refresh i {
                transition: transform 0.3s;
            }

            .btn-refresh.spin i {
                transform: rotate(360deg);
            }

        /* Stats Cards */
        .dashboard-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2.5rem;
        }

        .stat-card {
            background-color: white;
            border-radius: 0.5rem;
            padding: 1.5rem;
            box-shadow: var(--card-shadow);
            display: flex;
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
            overflow: hidden;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 2rem 0 rgba(58, 59, 69, 0.2);
            }

        .card-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 1rem;
            color: white;
            font-size: 1.25rem;
        }

        .card-users .card-icon {
            background-color: var(--primary);
        }

        .card-products .card-icon {
            background-color: var(--success);
        }

        .card-orders .card-icon {
            background-color: var(--info);
        }

        .card-revenue .card-icon {
            background-color: var(--warning);
        }

        .card-content {
            flex: 1;
        }

            .card-content h3 {
                font-size: 1.5rem;
                font-weight: 700;
                margin: 0 0 0.25rem;
                color: var(--dark);
            }

            .card-content p {
                margin: 0;
                color: var(--gray);
                font-size: 0.9rem;
            }

        .card-trend {
            margin-top: 0.5rem;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

            .card-trend.positive {
                color: var(--success);
            }

            .card-trend.negative {
                color: var(--danger);
            }

            .card-trend.neutral {
                color: var(--info);
            }

        .card-action {
            align-self: flex-start;
        }

        .btn-action {
            color: var(--gray);
            transition: color 0.3s;
        }

            .btn-action:hover {
                color: var(--primary);
            }

        /* Chart Cards */
        .dashboard-charts {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2.5rem;
        }

        .chart-card {
            background-color: white;
            border-radius: 0.5rem;
            box-shadow: var(--card-shadow);
            overflow: hidden;
        }

        .chart-header {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .chart-title h3 {
            font-size: 1.25rem;
            margin: 0 0 0.25rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .chart-title h3 i {
                color: var(--primary);
            }

        .chart-title p {
            margin: 0;
            color: var(--gray);
            font-size: 0.85rem;
        }

        .chart-actions {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-group {
            display: flex;
            border-radius: 0.35rem;
            overflow: hidden;
            border: 1px solid var(--border-color);
        }

        .btn-chart-action {
            padding: 0.375rem 0.75rem;
            background-color: white;
            border: none;
            color: var(--gray);
            font-size: 0.85rem;
            transition: all 0.3s;
        }

            .btn-chart-action:hover {
                background-color: var(--light);
            }

            .btn-chart-action.active {
                background-color: var(--primary);
                color: white;
            }

        .btn-dropdown {
            background: none;
            border: none;
            color: var(--gray);
            padding: 0.375rem;
            border-radius: 50%;
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
        }

            .btn-dropdown:hover {
                background-color: var(--light);
                color: var(--dark);
            }

        .dropdown-menu {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            border-radius: 0.35rem;
            padding: 0.5rem 0;
        }

        .dropdown-item {
            padding: 0.5rem 1.5rem;
            font-size: 0.85rem;
        }

        .chart-container {
            position: relative;
            height: 300px;
            padding: 1.5rem;
        }

        /* Table Section */
        .dashboard-tables {
            margin-top: 2.5rem;
        }

        .table-card {
            background-color: white;
            border-radius: 0.5rem;
            box-shadow: var(--card-shadow);
            overflow: hidden;
        }

        .table-header {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .table-title h3 {
            font-size: 1.25rem;
            margin: 0 0 0.25rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .table-title h3 i {
                color: var(--primary);
            }

        .table-title p {
            margin: 0;
            color: var(--gray);
            font-size: 0.85rem;
        }

        .btn-view-all {
            color: var(--primary);
            font-size: 0.9rem;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.25rem;
            transition: color 0.3s;
        }

            .btn-view-all:hover {
                color: #4a5bbf;
            }

        .table-responsive {
            overflow-x: auto;
        }

        .table {
            width: 100%;
            margin-bottom: 0;
            color: var(--dark);
        }

            .table th {
                font-weight: 600;
                font-size: 0.8rem;
                text-transform: uppercase;
                color: var(--gray);
                padding: 1rem 1.5rem;
                border-bottom: 1px solid var(--border-color);
            }

            .table td {
                padding: 1rem 1.5rem;
                vertical-align: middle;
                border-bottom: 1px solid var(--border-color);
            }

        .table-hover tbody tr:hover {
            background-color: var(--primary-light);
        }

        .order-id {
            font-weight: 600;
            color: var(--primary);
        }

        .order-amount {
            font-weight: 600;
        }

        .order-date {
            color: var(--gray);
            font-size: 0.9rem;
        }

        .status-badge {
            display: inline-block;
            padding: 0.35em 0.65em;
            font-size: 0.75em;
            font-weight: 700;
            line-height: 1;
            text-align: center;
            white-space: nowrap;
            vertical-align: baseline;
            border-radius: 0.35rem;
        }

            .status-badge.pending {
                background-color: rgba(246, 194, 62, 0.2);
                color: #c49a00;
            }

            .status-badge.completed {
                background-color: rgba(28, 200, 138, 0.2);
                color: var(--success);
            }

            .status-badge.processing {
                background-color: rgba(231, 74, 59, 0.2);
                color: var(--danger);
            }

        /* Responsive adjustments */
        @@media (max-width: 1200px) {
            .dashboard-charts

        {
            grid-template-columns: 1fr;
        }

        }

        @@media (max-width: 768px) {
            .dashboard-header

        {
            flex-direction: column;
            align-items: flex-start;
        }

        .header-actions {
            width: 100%;
            justify-content: space-between;
        }

        .dashboard-stats {
            grid-template-columns: 1fr 1fr;
        }

        }

        @@media (max-width: 576px) {
            .dashboard-stats

        {
            grid-template-columns: 1fr;
        }

        .dashboard-container {
            padding: 1rem;
        }

        }
    </style>
}