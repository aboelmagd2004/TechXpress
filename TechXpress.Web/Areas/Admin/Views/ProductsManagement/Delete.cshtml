@using TechXpress.Data.Models
@model ProductViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded border-danger">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-trash-fill"></i> Delete Product</h3>
            <a asp-action="Index" class="btn btn-light btn-sm"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
        </div>

        <div class="card-body">
            <h5 class="text-danger mb-4">Are you sure you want to delete this product?</h5>

            <div class="row mb-3">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded border" style="max-height: 200px;" />
                    }
                    else
                    {
                        <img src="~/images/no-image.png" alt="No Image" class="img-fluid rounded border" />
                    }
                </div>
                <div class="col-md-8">
                    <table class="table table-bordered table-sm">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>$@Model.Price.ToString("F2")</td>
                            </tr>
                            <tr>
                                <th>Category</th>
                                <td>@Model.Category?.Name ?? "N/A"</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="text-end">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-x-circle-fill"></i> Confirm Delete</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>
